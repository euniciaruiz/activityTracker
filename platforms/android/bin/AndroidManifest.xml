<?xml version='1.0' encoding='utf-8'?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.activityTracker"
    android:hardwareAccelerated="true"
    android:versionCode="1"
    android:versionName="0.0.1"
    android:windowSoftInputMode="adjustPan" >

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.project.activityTracker.ActivityTracker"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.activityTracker.CreateActivity"
            android:label="@string/title_activity_create"
            android:parentActivityName="com.project.activityTracker.ActivityTracker" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.activityTracker.ActivityTracker" />
        </activity>
        <activity
            android:name="com.project.activityTracker.ShowActivity"
            android:parentActivityName="com.project.activityTracker.ActivityTracker" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.activityTracker.ActivityTracker" />
        </activity>
        <activity
            android:name="com.project.activityTracker.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.project.activityTracker.CustomOnItemSelectedListener"
            android:label="@string/title_activity_spinner" >
        </activity>
    </application>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

</manifest>
